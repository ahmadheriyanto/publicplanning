<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="web_partner_resource_template" name="BC Planning Partner Resources">
    <t t-call="website.layout">
      <div id="resource_wrap" class="oe_structure">
        <div class="container my-4">
          <h3>Partner Resources List</h3>
          <p class="mb-3">
            Partner:
            <strong id="partner-name"><t t-esc="partner_name"/></strong>
            <span class="text-muted ms-2">(ID: <span id="partner-id" t-esc="partner_id"/>)</span>
          </p>

          <div class="d-flex justify-content-between align-items-center mb-2">
            <button id="btn-add-resource" class="btn btn-primary">
              <i class="fa fa-plus me-1" aria-hidden="true"></i> Add Resource
            </button>
            <div id="resources-feedback" class="text-danger small"></div>
          </div>

          <div class="table-responsive">
            <table id="resources-table" class="table table-bordered align-middle">
              <thead class="table-light">
                <tr>
                  <th class="col-id">ID</th>
                  <th class="col-name">Name</th>
                  <th class="col-email">Email</th>
                  <th class="col-portal text-center">Portal</th>
                  <th class="col-projects text-center">Projects</th>
                  <th class="col-teams text-center">Teams</th>
                  <th class="col-partner text-center">Planning</th>
                  <th class="col-bor text-center">BOR</th>
                  <th class="col-resource text-center">Resource</th>
                  <th class="col-actions text-center">Actions</th>
                </tr>
              </thead>
              <tbody id="resources-tbody">
                <tr data-empty="true">
                  <td colspan="10" class="text-center text-muted">Loading...</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Modal for Create/Update -->
        <div class="modal fade" id="resourceModal" tabindex="-1" aria-labelledby="resourceModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <form id="resource-form">
                <div class="modal-header">
                  <h5 class="modal-title" id="resourceModalLabel">Add Resource</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <input type="hidden" id="resource-id" value=""/>
                  <div class="mb-3">
                    <label for="resource-name" class="form-label">Name</label>
                    <input type="text" id="resource-name" class="form-control" placeholder="Enter resource name" required="required"/>
                  </div>
                  <div class="mb-3">
                    <label for="resource-email" class="form-label">Email</label>
                    <input type="email" id="resource-email" class="form-control" placeholder="Enter email" required="required"/>
                  </div>

                  <div id="resource-form-feedback" class="text-danger small"></div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary" id="resource-save-btn">Save</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>

      <style>
        /* Desktop/tablet layout */
        #resources-table { width: 100%; table-layout: auto !important; }
        #resources-table th, #resources-table td { vertical-align: middle; }

        /* Prevent wrapping only on Email column on larger screens */
        #resources-table th.col-email,
        #resources-table td:nth-child(3) {
          white-space: nowrap;
        }

        /* Column min-widths */
        #resources-table th.col-id,
        #resources-table td:nth-child(1) { min-width: 56px; }

        #resources-table th.col-name,
        #resources-table td:nth-child(2) { min-width: 180px; }

        #resources-table th.col-email,
        #resources-table td:nth-child(3) { min-width: 220px; }

        #resources-table th.col-portal,
        #resources-table td:nth-child(4) { min-width: 64px; text-align: center; }

        #resources-table th.col-actions,
        #resources-table td:nth-child(10) { min-width: 110px; text-align: center; }

        #resources-table th.col-resource,
        #resources-table td:nth-child(9) { min-width: 90px; text-align: center; }

        #resources-table th.col-projects,
        #resources-table td:nth-child(5),
        #resources-table th.col-teams,
        #resources-table td:nth-child(6),
        #resources-table th.col-partner,
        #resources-table td:nth-child(7),
        #resources-table th.col-bor,
        #resources-table td:nth-child(8) {
          min-width: 80px;
          text-align: center;
        }

        .table-responsive { overflow-x: auto; -webkit-overflow-scrolling: touch; }

        /*
         Portal icon: replace filled blob with simple tick/cross glyphs
         - Do NOT change any ids/classes so resources.js keeps working.
         - Hide any inner icon/svg the theme may inject and render a simple glyph via ::before.
        */
        .portal-indicator .portal-icon {
          /* keep element present for JS, but remove theme blob visuals */
          display: inline-block !important;
          width: auto !important;
          height: auto !important;
          line-height: 1 !important;
          padding: 0 !important;
          margin: 0 !important;
          background: transparent !important;
          box-shadow: none !important;
          border: none !important;
          border-radius: 0 !important;
          text-align: center;
          vertical-align: middle;
        }
        /* hide children icons/images injected by theme */
        .portal-indicator .portal-icon > * { display: none !important; }

        /* default: no portal -> cross */
        .portal-indicator .portal-icon::before {
          content: "✕";
          color: #6c757d;
          font-weight: 700;
          font-size: 14px;
          display: inline-block;
        }
        /* portal enabled -> check */
        .portal-indicator .portal-icon.text-success::before {
          content: "✓";
          color: #2ca01c;
        }
        /* explicit muted state */
        .portal-indicator .portal-icon.text-muted::before {
          content: "✕";
          color: #6c757d;
        }

        /* Ensure center alignment in portal column */
        #resources-table td:nth-child(4),
        #resources-table th.col-portal { text-align: center; }

        /* Mobile: stacked cards */
        @media (max-width: 768px) {
          #resources-table, #resources-table thead, #resources-table tbody, #resources-table th, #resources-table td, #resources-table tr {
            display: block;
            width: 100%;
          }
          #resources-table thead { display: none; }
          #resources-table tr {
            margin: 0 0 1rem 0;
            padding: 0.6rem;
            border: 1px solid #e9ecef;
            border-radius: 6px;
            background: #fff;
          }
          #resources-table td {
            white-space: normal;
            word-break: break-word;
            padding: 0.35rem 0.5rem;
            border: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
          }
          #resources-table td:before {
            content: "";
            font-weight: 700;
            display: inline-block;
            width: 36%;
            max-width: 140px;
            margin-right: 1rem;
            color: #333;
          }
          #resources-table td > * { margin: 0; flex: 1 1 auto; text-align: right; }
          #resources-table td:nth-child(1):before { content: "ID"; }
          #resources-table td:nth-child(2):before { content: "Name"; }
          #resources-table td:nth-child(3):before { content: "Email"; }
          #resources-table td:nth-child(4):before { content: "Portal"; }
          #resources-table td:nth-child(5):before { content: "Projects"; }
          #resources-table td:nth-child(6):before { content: "Teams"; }
          #resources-table td:nth-child(7):before { content: "Planning"; }
          #resources-table td:nth-child(8):before { content: "BOR"; }
          #resources-table td:nth-child(9):before { content: "Resource"; }
          #resources-table td:nth-child(10):before { content: "Actions"; }
          #resources-table td:nth-child(10) { padding-left: 0; }
          #resources-table td:nth-child(10) > .btn-group, #resources-table td:nth-child(10) > .btn { float: right; }
          #resources-table th, #resources-table td { min-width: 0 !important; }
        }

        /* Small icon styles preserved */
        .menu-toggle { display:inline-block; width:28px; height:28px; text-align:center; line-height:28px; }
      </style>
    </t>
  </template>
</odoo>